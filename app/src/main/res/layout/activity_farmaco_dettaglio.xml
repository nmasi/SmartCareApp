<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FarmacoDettaglioActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/farmacoImg"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:minHeight="150dp"
        android:minWidth="150dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nome"
        android:id="@+id/farmacoNome"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/farmacoImg"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Azienda"
        android:id="@+id/farmacoNomeAzienda"
        android:textSize="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/farmacoNome"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Descrizione"
        android:id="@+id/farmacoDescrizione"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/farmacoNomeAzienda"
        android:autoText="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerHorizontal="true"
        android:scrollIndicators="right"
        android:textAlignment="gravity"
        android:textStyle="italic"
        android:typeface="serif"
        android:textSize="15dp"
        android:gravity="fill_horizontal|fill" />
</RelativeLayout>
